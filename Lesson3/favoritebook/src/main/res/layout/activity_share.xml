<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/textDevBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Любимая книга разработчика"/>

        <TextView
            android:id="@+id/textDevQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цитата из книги"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/editBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите название вашей любимой книги"/>

        <EditText
            android:id="@+id/editQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите цитату из вашей книги"
            android:layout_marginBottom="24dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отправить данные"
            android:onClick="sendBack"/>
    </LinearLayout>
</ScrollView>